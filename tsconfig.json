{
	"compilerOptions": {
		"target": "ES6",
		"declaration": false,
		"lib": [
			"es5",
			"es2015.core",
			"es2017.string",
			"es2017.object",
			"es2015.collection",
			"es2015.promise",
			"es2015.proxy",
			"ES2015.Iterable",
			"dom"
		],
		"typeRoots" : ["../typings"],
		"module" : "ES6",
		"outDir": "./dist/styled-class/",
		"sourceMap": false,
		"noEmitHelpers":true,
		"watch": true,
		"experimentalDecorators":true
	},
	"include": [
		"./src/**/*"
	],
	"compileOnSave": true
}